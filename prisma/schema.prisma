generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  ELECTRONICS
  FURNITURE
  HOME_APPLIANCES
  SPORTING_GOODS
  OUTDOOR
  TOYS
}

enum Status {
  BUY
  RENT
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  first_name String
  last_name String
  address String
  phone String
  products Product[]
}

model Product {
  id         Int      @id @default(autoincrement())
  title      String
  description String
  category   Category
  isAvailable Boolean @default(true)
  ownerId    Int
  owner      User     @relation(fields: [ownerId], references: [id])
  status     Status   @default(BUY)
}
